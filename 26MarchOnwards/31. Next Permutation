class Solution {
public:
    void nextPermutation(vector<int>& nums) {
        int n=nums.size();
        int idx=-1;
        for(int i=n-2;i>=0;i--){
            if(nums[i]<nums[i+1]){
                idx=i;
                break;
            }
        }
        if(idx==-1){
            sort(nums.begin(), nums.end());
            return;
        }
        //random big value
        int diff=1000;
        int swapidx=idx;
        for(int j=idx+1;j<n;j++){
            int currDiff=(nums[j]-nums[idx]);
            if(diff>currDiff && currDiff>0){
                diff=currDiff;
                swapidx=j;
            }
        }
        swap(nums[idx], nums[swapidx]);
        sort(nums.begin()+idx+1, nums.end());
    }
};
