class Solution {
public:
    vector<vector<int>> helper(vector<vector<int>>& image, int sr, int sc, int newcolor, int oldcolor, int row, int col){

        if(sr<0 || sc<0 || sr==row || sc==col || image[sr][sc]!=oldcolor ||image[sr][sc]==newcolor)return image;
        image[sr][sc]=newcolor;
        helper(image, sr+1, sc, newcolor, oldcolor, row, col);
        helper(image, sr-1, sc, newcolor, oldcolor, row, col);
        helper(image, sr, sc+1, newcolor, oldcolor, row, col);
        helper(image, sr, sc-1, newcolor, oldcolor, row, col);
        return image;        
    }
    vector<vector<int>> floodFill(vector<vector<int>>& image, int sr, int sc, int color) {
        if(image[sr][sc]==color)return image;
        int oldcolor=image[sr][sc];
        int newcolor=color;
        int row=image.size();
        int col=image[0].size();
        return helper(image, sr, sc, newcolor, oldcolor, row, col);
    }
};
